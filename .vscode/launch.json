    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/log_analyzer.py",
            "console": "integratedTerminal",
            "args": [
                "--format=basic",
                "patterns.csv",
                "log.csv"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/.venv/lib/python3.12/site-packages" 
            }
        }
    ]
}